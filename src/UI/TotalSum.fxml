<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.TotalSumController">
   <children>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="150.0" spacing="5.0">
         <children>
            <Label text="Enter date:" />
            <TextField fx:id="txtDate" prefHeight="25.0" prefWidth="95.0" promptText="dd.mm.yyyy" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="150.0" spacing="3.0">
         <children>
            <Button fx:id="btnCalculate" onAction="#btnCalculateClick" text="Calculate" />
            <Button fx:id="btnCancel" onAction="#btnCancelClick" text="Cancel" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="150.0" spacing="5.0">
         <children>
            <Label text="Sum is:" />
            <TextField fx:id="txtTotalSum" prefHeight="25.0" prefWidth="95.0" editable="false" text="${txtTotalSum.text}" />
         </children>
      </HBox>
   </children>
</VBox>
