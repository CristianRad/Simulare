<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="235.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.AddController">
    <children>
      <Label text="Insert fields:" />
        <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0" />
        <TextField fx:id="txtSum" maxWidth="150.0" promptText="Sum" />
        <TextField fx:id="txtDescription" maxWidth="150.0" promptText="Description" />
        <TextField fx:id="txtDate" maxWidth="150.0" promptText="Date" />
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <children>
                <Button fx:id="btnAdd" onAction="#btnAddClick" text="Add" />
                <Button fx:id="btnCancel" onAction="#btnCancelClick" text="Cancel" />
            </children>
        </VBox>
    </children>
</VBox>
